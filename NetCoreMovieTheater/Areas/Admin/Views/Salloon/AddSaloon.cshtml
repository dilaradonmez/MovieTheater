@model Salloon
@{
    ViewData["Title"] = "AddSaloon";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div asp-validation-summary="All">

            </div>
            <form asp-action="AddMovie" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="SalloonName">Salloon Name</label>
                    <input name="SallonName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Capacity</label>
                    <input name="Capacity" type="number" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Reservations</label>
                    <input name="Reservations" type="number" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Created Date</label>
                    <input name="CreatedDate" type="date" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
            </form>
        </div>
    </div>
</div>

