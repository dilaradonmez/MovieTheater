@model Reservation
@{
    ViewData["Title"] = "AddReservation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Genre> genre = ViewBag.Genre;
    List<Movie> movie = ViewBag.Genre;
    List<Session> sessions = ViewBag.Genre;
    List<Week> weeks = ViewBag.Genre;
    List<Salloon> salloons = ViewBag.Genre;
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div asp-validation-summary="All">

            </div>
            <form asp-action="AddMovie" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    @foreach (var item in movie)
                    {
                        <input type="checkbox" name="movieId" value="@item.Id">
                        <label for="vehicle1"> @item.MovieName</label><br>}
                </div>
                <div class="form-group">
                    @foreach (var item in genre)
                    {
                        <input type="checkbox" name="genresId" value="@item.Id">
                        <label for="vehicle1"> @item.GenreName</label><br>}
                </div>
                <div class="form-group">
                    @foreach (var item in salloons)
                    {
                        <input type="checkbox" name="salloonId" value="@item.Id">
                        <label for="vehicle1"> @item.SalloonName</label><br>}
                </div>
                <div class="form-group">
                    @foreach (var item in sessions)
                    {
                        <input type="checkbox" name="sessionId" value="@item.Id">
                        <label for="vehicle1"> @item.SessionTime</label><br>}
                </div>
                <div class="form-group">
                    @foreach (var item in weeks)
                    {
                        <input type="checkbox" name="weekId" value="@item.Id">
                        <label for="vehicle1"> @item.LastDay</label><br>}
                </div>
                <div class="form-group">
                    @foreach (var item in weeks)
                    {
                        <input type="checkbox" name="weekId" value="@item.Id">
                        <label for="vehicle1"> @item.FirstDay</label><br>}
                </div>
                <button type="submit" class="btn btn-primary mt-2">Save</button>
            </form>
        </div>
    </div>
</div>


